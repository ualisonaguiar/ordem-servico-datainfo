.classForm {
    margin: 5px auto 0;
}

.classForm label {
    width: 100px;
    background-color: #EEEEEE;
    float: left;
    font-weight: bold;
    height: 31px;
    line-height: 31px;
    text-align: right;
    font-size: 12px;
}

.classForm input, .classForm select, .classForm textarea {
    font-size: 12px;
    overflow: hidden;
}

.classForm input[type=checkbox] {
    margin-top: 15px;
    margin-bottom: 21px;
    *margin-bottom: 15px;
}

.classForm input[type=file] {
    *background-color: #FFFFFF;
    *border: 1px solid #CCCCCC;
    *margin-top: -1px;
    margin-bottom: 9px;
}

.classForm .divRequired {
    width: 7px;
    background-color: #EEEEEE;
    float: left;
    font-weight: bold;
    height: 31px;
    line-height: 31px;
    text-align: left;
    font-size: 12px;
    color: red;
    padding-left: 2px;
}

form select, form input, form textarea, form input {
    display: inline;
}