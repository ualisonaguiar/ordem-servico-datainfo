            var arrDivContainer = getElementsFromAttribute(iframeContainerReadme.body, 'DIV', 'class', 'container');
            if (arrDivContainer.length > 0) {
                var divContainer = arrDivContainer[0];
                divContainer.style.width = '100%';
                divContainer.style.marginTop = '-50px';
            }
        };
	} catch (exception) {
		window.location.href = strGlobalBasePath + '/readme';
